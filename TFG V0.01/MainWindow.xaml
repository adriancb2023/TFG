<Window x:Class="TFG_V0._01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFG_V0._01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Grid>
        <Canvas Width="120" Height="120">
            
            <Ellipse Width="100" Height="100" Stroke="#DDD" StrokeThickness="10" Canvas.Left="10" Canvas.Top="10" Visibility="Hidden"/>

            <Path x:Name="ProgressPath" Stroke="#0ef" StrokeThickness="10" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure x:Name="ProgressFigure" StartPoint="60,10">
                            <ArcSegment x:Name="ProgressArc"  Point="60,10" Size="50,50" SweepDirection="Clockwise" IsLargeArc="False"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Canvas>
        
    </Grid>
    
</Window>
