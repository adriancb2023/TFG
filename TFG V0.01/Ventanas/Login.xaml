<Window x:Class="TFG_V0._01.Ventanas.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:faWpf="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        mc:Ignorable="d"
        Title="Login" Height="650" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Estilo para el botón de cambio de tema -->
        <Style x:Key="ThemeButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Image x:Name="ThemeIcon" Source="/TFG V0.01;component/Recursos/Iconos/sol.png" Width="16" Height="16"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ThemeIcon" Property="Source" Value="/TFG V0.01;component/Recursos/Iconos/luna.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Fondo -->
        <Grid.Background>
            <ImageBrush x:Name="backgroundFondo" ImageSource="/TFG V0.01;component/Recursos/Background/oscuro/main.png"/>
        </Grid.Background>

        <!-- Claro/Oscuro -->
        <Button x:Name="ThemeButton" Width="50" Height="25" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="ThemeButton_Click" Style="{StaticResource ThemeButtonStyle}"/>
        <!-- Formulario centrado -->
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="Titulo" Text="Iniciar Sesión" FontSize="24" FontWeight="Bold"  HorizontalAlignment="Center" Margin="10" Foreground="White" FontFamily="Stardom" />
            <TextBlock x:Name="Correo" Text="Email" FontSize="16" HorizontalAlignment="Left" Margin="5" Foreground="White" FontFamily="Melodrama"/> 
            <TextBox x:Name="UsernameTextBox"  Margin="5" />
            <TextBlock x:Name="Pass" Text="Contraseña" FontSize="16" HorizontalAlignment="Left" Margin="5" Foreground="White" FontFamily="Melodrama"/>
            <PasswordBox x:Name="PasswordBox"  Margin="5" />
            
            <TextBlock x:Name="errorLogin" Text="La contraseña o el email no son correctas" Margin="5" Visibility="Hidden" Foreground="White" FontFamily="Melodrama"/>
            
            <Button Content="Iniciar Sesión" Margin="5" Click="Loguearse"/>
            <Button Content="Registrarse" Margin="5"  Click="irRegistrarse"/>
            <Button Content="Saltar Inicio" Margin="5" Click="saltarInicio"/>
        </StackPanel>
    </Grid>
</Window>
