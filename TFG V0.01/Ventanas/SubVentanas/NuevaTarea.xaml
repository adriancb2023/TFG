<Window x:Class="TFG_V0._01.Ventanas.SubVentanas.NuevaTarea"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFG_V0._01.Ventanas.SubVentanas"
        mc:Ignorable="d"
        Title="NuevaTarea" Height="600" Width="400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Estilo para el botón de cambio de tema -->
        <Style x:Key="ThemeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <Image x:Name="ThemeIcon" Source="/TFG V0.01;component/Recursos/Iconos/sol.png" Width="20" Height="20"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botones redondeados -->
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                    CornerRadius="20" BorderThickness="{TemplateBinding BorderThickness}" 
                    BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="aqua" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" Value="#DDDDDD" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Easing para suavizar la animación -->
        <QuadraticEase x:Key="SmoothEase" EasingMode="EaseInOut" />

        <!-- Estilo de tarjeta -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush x:Name="colortarjeta" Color="#454545" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#333" />
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Fondo difuminado -->
        <Grid.Background>
            <ImageBrush x:Name="backgroundFondo" ImageSource="/TFG V0.01;component/Recursos/Background/oscuro/main.png"/>
        </Grid.Background>

        <!-- Fondo difuminado con Border -->
        <Border  Background="Black" Opacity="0.55" Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        <!-- Contenedor de contenido -->
        <Grid  VerticalAlignment="Center"  Margin="40">
            <!-- Claro/Oscuro  -->
            <Button x:Name="ThemeButton" Width="35" Height="35" Margin="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="ThemeButton_Click" Style="{StaticResource ThemeButtonStyle}" Grid.Column="2"/>

            <!-- Título -->
            <TextBlock Text="Añadir nueva tarea" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Foreground="White"/>

            <!-- ComboBox para seleccionar un caso -->
            <TextBlock Text="Selecciona un caso" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0" Foreground="White"/>
            <ComboBox x:Name="comboBoxCasos" Width="300" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,90,0,0">
                <ComboBoxItem Content="Caso 1"/>
                <ComboBoxItem Content="Caso 2"/>
                <ComboBoxItem Content="Caso 3"/>
            </ComboBox>

            <!-- Campo Título de la tarea -->
            <TextBlock Text="Título de la tarea" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,160,0,0" Foreground="White"/>
            <TextBox x:Name="TituloTarea" Width="300" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,180,0,0" />

            <!-- Campo Descripción de la tarea -->
            <TextBlock Text="Descripción de la tarea" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,220,0,0" Foreground="White"/>
            <TextBox x:Name="DescripcionTarea" Width="300" Height="80" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,240,0,0" VerticalScrollBarVisibility="Auto" />

            <!-- Selector de Fecha de finalización -->
            <DatePicker x:Name="FechaFIn" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,330,0,0" Width="300"/>

            <!-- Botón para guardar la tarea -->
            <Button Content="Guardar Tarea" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,380,0,0" Width="200" Height="45" Style="{StaticResource RoundedButtonStyle}" Click="GuardarNuevaTarea"/>
        </Grid>
    </Grid>
</Window>
